<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.stage.Screen?>
<Group>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          maxHeight="${screen.visualBounds.height}" maxWidth="${screen.visualBounds.width}"
          prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}"
          minHeight="300" minWidth="400"
          style="-fx-background-color: linear-gradient(to Bottom, rgba(29,29,29,0.91), darkgrey);" alignment="CENTER">
    <fx:define>
        <Screen fx:id="screen" fx:factory="getPrimary"/>
    </fx:define>
    <TextField fx:id="textfield" promptText="Enter Your Name" style="-fx-background-color: white;
    -fx-border-radius: 5px; -fx-min-height: 35px; -fx-min-width: 180px; -fx-font-weight: bold;" GridPane.columnIndex="0"/>
    <Button fx:id="registerButton" text="Next" style="-fx-background-color: rgba(115,115,115,0.75);
    -fx-border-radius: 60; -fx-background-radius: 20; -fx-min-width: 40px; -fx-min-height: 35px; -fx-font-weight: bold;" GridPane.columnIndex="1"
            textFill="aliceblue" />

</GridPane>
</Group>